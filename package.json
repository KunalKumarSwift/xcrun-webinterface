{
  "name": "xcrun-webinterface",
  "version": "1.2.0",
  "description": "Web interface for xcrun simctl commands",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "cd client && npm run build",
    "install-client": "cd client && npm install",
    "heroku-postbuild": "npm run install-client && npm run build",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"cd client && npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "npm run build && electron-builder",
    "electron-pack-mac": "npm run build && electron-builder --mac",
    "electron-pack-win": "npm run build && electron-builder --win",
    "electron-pack-linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "electron": "^37.3.0",
    "electron-builder": "^26.0.12",
    "electron-is-dev": "^3.0.1",
    "nodemon": "^3.0.2",
    "wait-on": "^8.0.4"
  },
  "keywords": [
    "xcrun",
    "simctl",
    "ios",
    "simulator",
    "web-interface",
    "electron",
    "desktop"
  ],
  "author": "Kunal Kumar",
  "license": "MIT",
  "main": "main.js",
  "build": {
    "appId": "com.xcrun.simctl",
    "productName": "xcrun Simctl Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "server.js",
      "package.json",
      "client/build/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "extraResources": [
      {
        "from": "node_modules",
        "to": "node_modules"
      }
    ]
  }
}
